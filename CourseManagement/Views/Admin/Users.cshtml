@model List<CourseManagement.Models.User>

@{
    ViewBag.Title = "Users";
}

<div class="forms" style="margin-top: 25px;">
    <h2 style="margin-top: 25px;">User List</h2>
    @if (ViewBag.Changes != null && ViewBag.Changes)
    {
        <div class="alert alert-success">
            <strong>Success!</strong> Changes succesfully applied.
        </div>
    }
    else
    {
        using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <center>
                    <table border="1" style="font-size: 15px; width: 90%; border: solid 1px #70a1ff;">
                        <tr style="background: #70a1ff; color: #3742fa;">
                            <th><center>Full Name</center></th>
                            <th><center>Email</center></th>
                            <th><center>Lecturer</center></th>
                        </tr>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            @Html.HiddenFor(m => Model[i].UserId)
                            @Html.HiddenFor(m => Model[i].Password)
                            if (i % 2 != 0)
                            {
                                <tr style="background: #bef7f0;"><td><center>@Html.EditorFor(m =>Model[i].FullName)</center></td><td><center>@Html.EditorFor(m =>Model[i].EmailId)</center></td><td><center>@Html.CheckBoxFor(m => Model[i].isLecturer)</center></td></tr>
                            }
                            else
                            {
                                <tr><td><center>@Html.EditorFor(m =>Model[i].FullName)</center></td><td><center>@Html.EditorFor(m =>Model[i].EmailId)</center></td><td><center>@Html.CheckBoxFor(m => Model[i].isLecturer)</center></td></tr>
                            }
                        }
                    </table>
                </center>

                <div class="form-group" style="margin-left: 12%; margin-top: 20px;">
                    <div class="col-md-offset-2 col-md-10">
                        <input style="        width: 60%;" type="submit" value="Accept" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    }
</div>