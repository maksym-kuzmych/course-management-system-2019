@model CourseManagement.Models.Question

@{
    ViewBag.Title = "DeleteQuestion";
}

<div class="forms" style="margin-top:25px;">
    <h2 style="margin-top:25px;">Delete Question</h2>
    <div class="form-horizontal">
        <h3 style="text-align:center">Are you sure you want to delete this question?</h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.QuestionId)
            @Html.HiddenFor(m => m.QuizId)
            <div class="form-group" style="margin-left: 12%;">
                <div class="col-md-offset-2 col-md-10">
                    <input style="width: 60%;" type="submit" value="Delete question" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>

