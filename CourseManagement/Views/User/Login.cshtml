@model CourseManagement.Models.UserLogin

@{
    ViewBag.Title = "Login";
}

<div class="forms">
    <img src="~/Content/avatar.png" class="avatar">
    <h2>Login</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label style="margin-left: 30px;" for="FirstName" class="col-md-12">Email:</label>
                <div class="col-md-12">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="far fa-envelope"></i>
                        </span>
                        @Html.EditorFor(model => model.EmailId)
                    </div>
                    @Html.ValidationMessageFor(model => model.EmailId)
                </div>
            </div>

            <div class="form-group">
                <label style="        margin-left: 30px;" for="Password" class="col-md-12">Password:</label>
                <div class="col-md-12">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fas fa-key"></i>
                        </span>
                        @Html.EditorFor(model => model.Password)
                    </div>
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>

            <div class="form-group">
                <label style="margin-left: 55px;" for="RememberMe" class="col-md-12">Remember me?</label>
                <div class="col-md-12">
                    <div class="checkbox" style="position: absolute; left:70px; top:-32px;">
                        @Html.EditorFor(model => model.RememberMe)
                        @Html.ValidationMessageFor(model => model.RememberMe)
                    </div>
                </div>
            </div>

            <div class="form-group" style="margin-left: 11%;">
                <div class="col-md-offset-2 col-md-10">
                    <button style ="width: 60%" type="submit" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i> Sign In</button>
                    @*<input style="width: 60%;" type="submit" value="Sign In" class="btn btn-primary" />*@
                </div>
            </div>
        </div>
    }

    <div style="margin-left: 33px;">
        @Html.ActionLink("Register Now", "Registration", "User")
    </div>

    <div style="margin-left: 33px; padding-bottom:20px;">
        @Html.ActionLink("Forgot password?", "ForgotPassword", "User")
    </div>
</div>
@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
