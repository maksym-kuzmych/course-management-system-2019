@model CourseManagement.Models.User

@{
    ViewBag.Title = "ForgotPassword";
}

<div class="forms" style="margin-top:25px;">
    <h2 style="margin-top:25px;">ForgotPassword</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                <label style="        margin-left: 30px;" for="EmailId" class="col-md-12">Email:</label>
                <div class="col-md-12">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="far fa-envelope"></i>
                        </span>
                        @Html.EditorFor(model => model.EmailId)
                    </div>
                    @Html.ValidationMessageFor(model => model.EmailId)
                </div>
            </div>

            @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
            {
                if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">
                        <strong>Success! </strong>@ViewBag.Message
                    </div>
                }
            }
            else if (ViewBag.Status != null)
            {
                <div class="alert alert-danger">
                    <strong>Error! </strong>@ViewBag.Message
                </div>
            }

            <div class="form-group" style="margin-left: 10%;">
                <div class="col-md-offset-2 col-md-10">
                    <input style="width: 60%;" type="submit" value="Send" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>