@model CourseManagement.Models.User

@{
    ViewBag.Title = "Registration";
}

<div class="forms">
    <img src="~/Content/avatar.png" class="avatar">
    <h2>Registration</h2>
    @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
    {
        if (ViewBag.Message != null)
        {
            <div class="alert alert-success">
                <strong>Success! </strong>@ViewBag.Message
            </div>
        }
    }
    else
    {
        using (Html.BeginForm("Registration", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label style="        margin-left: 30px;" for="FullName" class="col-md-12">Full Name:</label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fas fa-user-circle"></i>
                            </span>
                            @Html.EditorFor(model => model.FullName)
                        </div>
                        @Html.ValidationMessageFor(model => model.FullName)
                    </div>
                </div>

                <div class="form-group">
                    <label style="margin-left: 30px;" for="EmailId" class="col-md-12">Email:</label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="far fa-envelope"></i>
                            </span>
                            @Html.EditorFor(model => model.EmailId)
                        </div>
                        @Html.ValidationMessageFor(model => model.EmailId)
                        @Html.ValidationMessage("EmailExist")
                    </div>
                </div>

                <div class="form-group">
                    <label style="margin-left: 30px;" for="DateOfBirth" class="col-md-12">Birth date:</label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="far fa-calendar-alt"></i>
                            </span>
                            @Html.EditorFor(model => model.DateOfBirth)
                        </div>
                        @Html.ValidationMessageFor(model => model.DateOfBirth)
                    </div>
                </div>

                <div class="form-group">
                    <label style="        margin-left: 30px;" for="Password" class="col-md-12">Password:</label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fas fa-key"></i>
                            </span>
                            @Html.EditorFor(model => model.Password)
                        </div>
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>

                <div class="form-group">
                    <label style="margin-left: 30px;" for="ConfirmPassword" class="col-md-12">ConfirmPassword:</label>
                    <div class="col-md-12">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fas fa-key"></i>
                            </span>
                            @Html.EditorFor(model => model.ConfirmPassword)
                        </div>
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </div>

                <div class="form-group" style="margin-left: 15px;">
                    <label for="PhotoObj" class="col-md-12">Photo:</label>
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.PhotoObj, new { type = "file" })
                        @Html.ValidationMessageFor(model => model.PhotoObj)
                    </div>
                </div>

                <div class="form-group" style="margin-left: 15%;">
                    <div class="col-md-offset-2 col-md-10">
                        <button style="width: 60%" type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Register</button>
                        @*<input style="width: 60%;" type="submit" value="Sign Up" class="btn btn-primary" />*@
                    </div>
                </div>
            </div>
            if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">
                    <strong>Error! </strong>@ViewBag.Message
                </div>
            }
        }
    }
</div>
@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}